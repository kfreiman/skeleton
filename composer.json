{
    "name": "middlewares/[name]",
    "type": "library",
    "description": "Middleware description",
    "license": "MIT",
    "keywords": [
        "psr-7",
        "psr-15",
        "middleware",
        "http"
    ],
    "homepage": "https://github.com/middlewares/[name]",
    "support": {
        "email": "your@email.com",
        "issues": "https://github.com/middlewares/[name]/issues"
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "psr/http-message": "~1.0",
        "http-interop/http-middleware": "^0.1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "zendframework/zend-diactoros": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Middlewares\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Middlewares\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "cs": [
            "php-cs-fixer fix . --fixers=-psr0"
        ]
    }
}
